<section class="section">
    <div class="container">
        <div class="signin-form row-fluid">
            <!--Sign In-->
            <div class="span5 offset1">
                <div class="box corner-all">
                    <div class="box-header grd-teal color-white corner-top">
                        <span>登陆:</span>
                    </div>
                    <div class="box-body bg-white">
                        <form id="sign-in" method="post" action="">
                            <div class="control-group">
                                <label class="control-label">登陆邮箱</label>
                                <div class="controls">
                                    <input type="text" class="input-block-level" name="account" id="account" autocomplete="off" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">密码</label>
                                <div class="controls">
                                    <input type="password" class="input-block-level" name="password" id="password" autocomplete="off" />
                                </div>
                            </div>
                            <div class="control-group" style='display:none' id='ie_notice'>
                                我们检测到您使用的是<b>IE浏览器</b>，我们推荐您使用Chrome浏览器使用我们的软件，用户体验更好，速度更快，赶快
                                <a href="http://www.greatbee.com/chrome.exe" target='_blank' style='color:#2131AC'>下载安装</a>
                                吧！
                            </div>
                            <div class="control-group">
                                <div class="pull-right helper-font-32">
                                    <!-- Sina WeiBo Login -->
                                    </div>
                                        <!-- <label class="checkbox">
                                            <input type="checkbox" data-form="uniform" name="remember_me" id="remember_me_yes" value="yes"> 记住我
                                        </label> -->
                                    </div>
                            <div class="form-actions">
                                <input class="btn btn-block btn-large btn-primary" id="btnLogin" value="登陆"/>
                                <span class="alert-label hidden" style="color: red;">login false!</span>
                                <p class="recover-account" id="btnRecoverAccount">找回 <a href="#" class="link" data-toggle="modal">您的密码</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--/Sign In-->
            <!--Sign Up-->
            <div class="span5">
                <div class="box corner-all">
                    <div class="box-header grd-green color-white corner-top">
                        <span>创建帐号!</span>
                    </div>
                    <div class="box-body bg-white">
                        <form id="sign-up" method="post">
                            <div class="control-group">
                                <label class="control-label">登陆邮箱</label>
                                <div class="controls">
                                    <input type="text" class="input-block-level" name="email" id="email" autocomplete="off" />
                                    <p class="help-block muted helper-font-small"><strong>请输入有效的邮箱.</strong> 系统会发送相关邮件给您.</p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">密码</label>
                                <div class="controls">
                                    <input type="password" class="input-block-level" name="pd" id="pd" autocomplete="off" />
                                    <p class="help-block muted helper-font-small">密码越长越好.包括数字和字母的组合.</p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">确认密码</label>
                                <div class="controls">
                                    <input type="password" class="input-block-level" name="password_again" id="password_again" autocomplete="off" />
                                    <p class="help-block muted helper-font-small">输入确认密码.</p>
                                </div>
                            </div>
                            <!-- <div class="control-group">
                                <p class="term-of-use">我已看过并同意<a href="#">用户使用协议</a>.</p>
                            </div> -->
                            <!-- <div class="control-group">
                                <label class="checkbox">
                                    <input type="checkbox" data-form="uniform" name="subscribe" id="subscribe_yes" value="yes" checked> 给我发送咨询信息邮件
                                </label>
                            </div> -->
                            <div class="form-actions">
                                <input class="btn btn-block btn-large btn-success" id="btnRegister" value="免费注册试用"/>
                                <span class="register-alert-label hidden" style="color: red;">register false!</span>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--/Sign Up-->
        </div><!-- /row -->
    </div><!-- /container -->
            
    <!-- modal recover -->
    <div id="modal-recover" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="modal-recoverLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 id="modal-recoverLabel">重置密码 <small>Email地址</small></h3>
        </div>
        <div class="modal-body">
            <form id="form-recover" method="post" onsubmit="return findPassword();">
                <div class="control-group">
                    <div class="controls">
                        <input type="text" name="recover" id="recover"/>
                        <p class="help-block helper-font-small">请输入您的邮箱地址，我们将发送密码重置邮件给您.</p>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <input type="submit" form="form-recover" id="btnFindPassword" class="btn btn-primary" value="发送" >
        </div>
    </div><!-- /modal recover-->
</section>
